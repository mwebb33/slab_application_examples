;\r\n\r\n  // Call basic setup functions\r\n  temphum9_cfg_setup(&temphum9_cfg);\r\n\r\n  return temphum9_init(&temphum9, &temphum9_cfg) ? SL_STATUS_FAIL : SL_STATUS_OK;\r\n}\r\n\r\n/***************************************************************************//**\r\n * Initialize application.\r\n ******************************************************************************/\r\nvoid app_init(void)\r\n{\r\n\r\n  if (SL_STATUS_OK != mikroe_custom_shtc3_init(sl_i2cspm_mikroe)) {\r\n    app_log(\"TempHum9 initialization failed.\");\r\n  } else {\r\n    app_log(\"TempHum9 initialization succeed.\");\r\n\r\n    sl_sleeptimer_start_periodic_timer_ms(&handle_periodic, 1000,\r\n        measure_periodic, NULL, 0, 0);\r\n  }\r\n}\r\n\r\nvoid measure_periodic(sl_sleeptimer_timer_handle_t *handle, void *data)\r\n{\r\n  (void) handle;\r\n  (void) data;\r\n\r\n  float _measurement_data[2];\r\n  temhum9_get_temperature_and_humidity(&temphum9, TEMPHUM9_NORMAL_MODE,\r\n      _measurement_data);\r\n  app_log(\">> Temp: %.2f °C RH: %.2f %%\\n\", _measurement_data[0],\r\n      _measurement_data[1]);\r\n}\r\n\r\n/***************************************************************************//**\r\n * App ticking function.\r\n ******************************************************************************/\r\nvoid app_process_action(void)\r\n{\r\n\r\n}"},{"type":"list","ordered":false,"position":{"column":1,"line":356},"children":[{"type":"listItem","position":{"column":1,"line":356},"children":[{"type":"paragraph","position":{"column":3,"line":356},"children":[{"type":"strong","position":{"column":3,"line":356},"children":[{"type":"text","position":{"column":5,"line":356},"value":"Build and flash the application"}]}]}]}]},{"type":"paragraph","position":{"column":2,"line":358},"children":[{"type":"text","position":{"column":2,"line":358},"value":"The driver and the demo application should operate properly if you connect the Temphum9 board to the explorer kit."}]},{"type":"paragraph","position"